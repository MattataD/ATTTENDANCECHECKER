<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group6"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SIGNUP">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="260dp"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Sign Up Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="@color/DirtyMatcha"
                android:textSize="50sp"
                android:textStyle="bold" />

            <!-- Name EditText -->
            <EditText
                android:id="@+id/signup_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dirtymatcha_border"
                android:drawableLeft="@drawable/baseline_account_box_24"
                android:drawablePadding="8dp"
                android:hint="Name"
                android:padding="10dp"
                android:textColor="@color/black" />

            <!-- Email EditText -->
            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dirtymatcha_border"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:padding="10dp"
                android:textColor="@color/black" />

            <!-- TUP ID EditText -->
            <EditText
                android:id="@+id/signup_tupid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dirtymatcha_border"
                android:drawableLeft="@drawable/baseline_co_present_24"
                android:drawablePadding="8dp"
                android:hint="TUP ID"
                android:padding="10dp"
                android:textColor="@color/black" />

            <!-- Password EditText -->
            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dirtymatcha_border"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/black" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/signbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/DirtyMatcha"
                android:background="@drawable/dirtymatcha_border"
                android:text="Sign Up"
                android:textSize="18sp" />


            <!-- Login Redirect Text -->
            <TextView
                android:id="@+id/loginRedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Go back to login"
                android:textColor="@color/DirtyMatcha"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
